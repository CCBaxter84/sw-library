<main>
  <h2>New Author</h2>
  <form class="author-form" action="/authors" method="POST">
    <label>Name</label>
    <input type="text" name="name" value={{ author.name }}>
    <section class="new-author-submit">
      <a class="btn btn-danger" href="/authors">Cancel</a>
      <button class="btn btn-primary" type="submit">Create</button>
    </section>
  </form>
  {{#if error}}
  <h2>{{ error }}</h2>
  {{/if }}
</main>